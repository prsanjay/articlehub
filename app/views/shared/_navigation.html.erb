<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Articlehub</a>
  <% unless devise_controller? %>
    <%= form_tag(articles_path, method: :get, class: 'form-inline mr-sm-2')  do %>
      <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2",placeholder: "Search Article" %>
      <%= submit_tag 'Search by author OR title OR text', class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>

    <%= form_tag(articles_path, method: :get, class: 'form-inline mr-sm-2')  do %>
      <%= text_field_tag :category, params[:category], class: "form-control mr-sm-2",placeholder: "Enter comma separated category" %>
      <%= submit_tag 'Search by category', class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>


    <div class="collapse navbar-collapse" id="navbarText">
    </div>
    <% if current_user.present? %>
      <%= link_to 'My Articles', articles_url(my: true), class: 'nav-link'%>
      <%= link_to 'Logout', destroy_user_session_url, class: 'nav-link', method: :delete %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_url, class: 'nav-link' %>
    <% end %>
  <% end %>
</nav>